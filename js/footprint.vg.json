{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 350,
  "background": "#B2C3A8",
  "title": {
    "text": "CO2 Emissions by Country",
    "subtitle": "A bar chart showing the Top 10 countries by Co2 emissions in 2019"
  },
  "data": { "url": "data/sectoremission.csv" },
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonth",
      "field": "date",
      "axis": { "format": "%Y" },
      "title": "Year"
    },
    "y": {
      "aggregate": "sum",
      "field": "value",
      "title": "CO2 Emission value",
      "scale": { "domain": [0, 1500] }
    },
    "color": {
      "field": "sector",
      "scale": { "scheme": "category20b" }
    }
  },
  "transform": [{ "filter": "datum.country == 'WORLD'" }]
}
